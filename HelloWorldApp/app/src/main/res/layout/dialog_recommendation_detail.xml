<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 半透明背景 -->
    <View
        android:id="@+id/dimBackgroundDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000" />

    <!-- 底部弹出内容 -->
    <ScrollView
        android:id="@+id/bottomSheetDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_sheet_background"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp">

            <!-- 商品大图 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="#F5F5F5">

                <TextView
                    android:id="@+id/detailImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="80sp" />

                <!-- 关闭按钮 -->
                <TextView
                    android:id="@+id/closeDetailDialog"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="12dp"
                    android:text="✕"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:background="#80000000"
                    android:textColor="#FFFFFF" />
            </RelativeLayout>

            <!-- 详情内容 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- 标题和优惠 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/detailTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="商品名称"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/detailDiscount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="优惠"
                        android:textSize="11sp"
                        android:textColor="#FF5722"
                        android:background="#FFEBEE"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp" />
                </LinearLayout>

                <!-- 推荐理由 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="#FFF9C4"
                    android:padding="10dp"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="💡"
                        android:textSize="16sp"
                        android:layout_marginEnd="6dp" />

                    <TextView
                        android:id="@+id/detailRecommendReason"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="推荐理由"
                        android:textSize="13sp"
                        android:textColor="#666666" />
                </LinearLayout>

                <!-- 价格信息 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="💰 参考价格："
                        android:textSize="14sp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/detailPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥88"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FF5722" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/人"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:layout_marginStart="2dp" />
                </LinearLayout>

                <!-- 商家地址 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📍 商家地址"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/detailAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="南京市玄武区中山东路18号"
                        android:textSize="13sp"
                        android:textColor="#666666"
                        android:lineSpacingExtra="2dp" />

                    <TextView
                        android:id="@+id/detailDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="距离300米 · 步行约4分钟"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- 用户评价 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⭐ 用户评价"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginBottom="8dp" />

                    <!-- 评分 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:id="@+id/detailRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.8"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#FF9800" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/5.0"
                            android:textSize="14sp"
                            android:textColor="#999999"
                            android:layout_marginStart="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="⭐⭐⭐⭐⭐"
                            android:textSize="16sp"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                    <!-- 评价内容 -->
                    <LinearLayout
                        android:id="@+id/reviewsContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <!-- 动态添加评价 -->
                    </LinearLayout>
                </LinearLayout>

                <!-- 操作按钮 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/detailNavigateButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="导航"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:background="@drawable/button_rounded"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/detailBookButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="立即预订"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:background="@drawable/button_rounded_yellow"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
