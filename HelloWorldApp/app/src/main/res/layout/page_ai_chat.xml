<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/aiChatPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:visibility="gone">

    <!-- é¡¶éƒ¨æ ‡é¢˜æ  -->
    <RelativeLayout
        android:id="@+id/aiChatHeader"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <!-- è¿”å›žæŒ‰é’® -->
        <ImageView
            android:id="@+id/btnBackFromAiChat"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_back_arrow"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            android:contentDescription="@string/btn_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/ai_chat_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"/>
    </RelativeLayout>

    <!-- èŠå¤©æ¶ˆæ¯åŒºåŸŸ -->
    <ScrollView
        android:id="@+id/aiChatScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/aiChatHeader"
        android:layout_above="@id/aiChatInputContainer"
        android:padding="12dp"
        android:scrollbars="vertical">

        <LinearLayout
            android:id="@+id/aiChatMessageList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>
    </ScrollView>

    <!-- åº•éƒ¨è¾“å…¥åŒºåŸŸ -->
    <LinearLayout
        android:id="@+id/aiChatInputContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:padding="12dp">

        <EditText
            android:id="@+id/aiChatInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:drawable/edit_text"
            android:hint="@string/ai_chat_input_hint"
            android:maxLines="4"
            android:minHeight="48dp"
            android:padding="12dp"
            android:textSize="16sp"
            android:inputType="textMultiLine|textCapSentences"/>

        <Button
            android:id="@+id/aiChatSendButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/btn_send"
            android:textSize="16sp"
            android:minWidth="80dp"
            android:background="#2196F3"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

    <!-- åŠ è½½æç¤º -->
    <LinearLayout
        android:id="@+id/aiChatLoadingIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/aiChatInputContainer"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:padding="12dp"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            style="?android:attr/progressBarStyleSmall"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:text="@string/ai_thinking"
            android:textColor="#666666"
            android:textSize="14sp"/>
    </LinearLayout>

    <!-- æ¬¢è¿Žç•Œé¢ -->
    <LinearLayout
        android:id="@+id/aiChatWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ¤–"
            android:textSize="64sp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ai_welcome_message"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ai_can_help"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ai_help_list"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="4dp"/>
    </LinearLayout>
</RelativeLayout>
