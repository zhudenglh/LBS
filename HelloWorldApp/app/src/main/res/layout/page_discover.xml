<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/discoverPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:visibility="gone">

    <!-- 顶部标题栏 -->
    <RelativeLayout
        android:id="@+id/discoverHeader"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tabLookAround"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="逛逛"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:clickable="true"
                android:focusable="true"
                android:paddingEnd="16dp"
                android:paddingBottom="2dp"/>

            <TextView
                android:id="@+id/tabNearbyPeople"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="附近的人"
                android:textSize="20sp"
                android:textColor="#999999"
                android:clickable="true"
                android:focusable="true"
                android:paddingBottom="2dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:text="🚌 5路公交"
            android:textSize="13sp"
            android:textColor="#FF5722"
            android:background="#FFF3E0"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"/>
    </RelativeLayout>

    <!-- 逛逛内容 -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/discoverHeader"
        android:visibility="visible">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/discoverPostList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"/>
        </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- 附近的人内容 -->
    <ScrollView
        android:id="@+id/nearbyPeopleContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/discoverHeader"
        android:fillViewport="true"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/nearbyPeopleList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"/>
    </ScrollView>

    <!-- 发布按钮 -->
    <TextView
        android:id="@+id/btnPublish"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="80dp"
        android:text="+"
        android:textSize="32sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/circle_background"
        android:elevation="8dp"
        android:clickable="true"
        android:focusable="true"/>
</RelativeLayout>
