<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp"
    android:layout_marginBottom="10dp"
    android:elevation="1dp">

    <!-- 用户信息行 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <!-- 用户头像 -->
        <TextView
            android:id="@+id/postAvatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="👤"
            android:textSize="24sp"
            android:gravity="center"
            android:background="#FFF9C4"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <!-- 用户昵称 -->
            <TextView
                android:id="@+id/postUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户昵称"
                android:textSize="14sp"
                android:textColor="#000000"
                android:textStyle="bold"/>

            <!-- 发布时间 -->
            <TextView
                android:id="@+id/postTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2分钟前"
                android:textSize="11sp"
                android:textColor="#999999"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- 公交标签 -->
        <TextView
            android:id="@+id/postBusTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5路"
            android:textSize="11sp"
            android:textColor="#FFFFFF"
            android:background="#FFD700"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:visibility="gone"/>
    </LinearLayout>

    <!-- 帖子标题 -->
    <TextView
        android:id="@+id/postTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="标题"
        android:textSize="16sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <!-- 帖子内容 -->
    <TextView
        android:id="@+id/postContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="内容详情"
        android:textSize="14sp"
        android:textColor="#333333"
        android:lineSpacingExtra="4dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_marginBottom="12dp"/>

    <!-- 图片容器 -->
    <LinearLayout
        android:id="@+id/postImageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/postImage1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="#F5F5F5"
            android:scaleType="centerCrop"
            android:layout_marginEnd="8dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/postImage2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="#F5F5F5"
            android:scaleType="centerCrop"
            android:layout_marginEnd="8dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/postImage3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="#F5F5F5"
            android:scaleType="centerCrop"
            android:visibility="gone"/>
    </LinearLayout>

    <!-- 底部互动栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/postLikeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="👍 12"
            android:textSize="12sp"
            android:textColor="#666666"
            android:paddingEnd="16dp"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:id="@+id/postCommentBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="💬 5"
            android:textSize="12sp"
            android:textColor="#666666"
            android:paddingEnd="16dp"
            android:clickable="true"
            android:focusable="true"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/postShareBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享"
            android:textSize="12sp"
            android:textColor="#666666"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>
</LinearLayout>
