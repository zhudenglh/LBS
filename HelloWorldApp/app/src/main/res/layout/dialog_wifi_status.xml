<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="24dp">

    <!-- 标题 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_wifi_title"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="20dp" />

    <!-- WiFi名称 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/wifi_network_name_label"
            android:textSize="14sp"
            android:textColor="#666666" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wifi_route_5_name"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- 连接状态 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/wifi_status_label"
            android:textSize="14sp"
            android:textColor="#666666" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/connected"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#4CAF50" />
    </LinearLayout>

    <!-- 网速 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/wifi_speed_label"
            android:textSize="14sp"
            android:textColor="#666666" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="↓ 2.5 MB/s  ↑ 0.8 MB/s"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- 信号强度 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/wifi_signal_label"
            android:textSize="14sp"
            android:textColor="#666666" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wifi_signal_excellent"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#4CAF50" />
    </LinearLayout>

    <!-- 按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/btn_cancel"
            android:textSize="14sp"
            android:textColor="#666666"
            android:background="@drawable/button_rounded_gray"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginEnd="12dp"
            android:minWidth="0dp"
            android:minHeight="0dp" />

        <Button
            android:id="@+id/disconnectButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/btn_disconnect"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_rounded_orange"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:minWidth="0dp"
            android:minHeight="0dp" />
    </LinearLayout>

</LinearLayout>
